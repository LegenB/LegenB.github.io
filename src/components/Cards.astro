---
import Tailwind from "../icons/Tailwind.astro"
import UnrealE from "../icons/UnrealE.astro"
import Playfab from "../icons/Playfab.astro"
import CloudScrit from "../icons/CloudScript.astro"
import HTML from "../icons/HTML.astro"
import CSS from "../icons/CSS.astro"
import JavaSc from "../icons/JavaSc.astro"

import React from "../icons/React.astro"



// Objecto con los Tags
const TAGS = {
    TAILWIND:{
        name:"Tailwind CSS",
        class:"bg-blue",
        icon: Tailwind
    },
    UNREALENGINE:{
        name:"Unreal Enigne 5",
        class:"bg-blue",
        icon: UnrealE
    },
    PLAYFAB:{
        name:"PlayFab",
        class:"bg-blue",
        icon: Playfab
    },
    HTML5:{
        name:"HTML",
        class:"bg-blue",
        icon: HTML

    },
    CSS:{
        name:"CSS",
        class:"bg-blue",
        icon: CSS

    },
    JAVASCRIPT:{
        name:"JavaScript",
        class:"bg-blue",
        icon: JavaSc

    },
    CLOUDSCRIPT:{
        name:"Cloud Script",
        class:"bg-blue",
        icon: CloudScrit
    },
    REACT:{
        name:"React",
        class:"bg-blue",
        icon: React
    }
    

}
/// Objeto con los proyectos
const Projects =[
    {
        title: "Kingdoms Of Ereloth ",
        date:"May/2023 - Dic/2023",
        src:"https://cdn.cloudflare.steamstatic.com/steam/apps/2198620/capsule_616x353.jpg?t=1697652143",
        description: "Juego de rol y supervivencia medieval de Arcadius Entertainment. Fui encargado de la secuencia de inicio trabajé mucho con widget blueprint y conexión con la plataforma PlayFab para administrar los datos de los jugadores (CRUD).",
        tags: [TAGS.UNREALENGINE,TAGS.PLAYFAB,TAGS.CLOUDSCRIPT],
        link: ""
    },
    {
        title: "PH Construcción",
        date:"Mar/2024 - Mar/2024",
        src:"/images/PH.webp",
        description: "Desarrollo de una página web estática para un constructor independiente, enfocada en mostrar sus trabajos anteriores de construcción y remodelación. La página incluye una sección dedicada a promocionar un artículo en venta",
        tags: [TAGS.HTML5,TAGS.CSS, TAGS.JAVASCRIPT, TAGS.REACT,TAGS.TAILWIND],
        link: "https://phconstruccion.netlify.app"
    }

]


---

{
    Projects.map(({title,date,src,description,tags,link}) => (
        

        <div class="group lg:w-[740px]  bg-gray-8900 border border-green-500 rounded-lg shadow-md  hover:shadow-lg hover:shadow-lime-700 transition bg-gray-900">

            <div class=" p-1 flex justify-center shadow-pink-700  drop-shadow-xl transition duration-500">
                <img class="rounded-lg w-full scale-95 group-hover:scale-100 transition duration-300" src={src} alt="" />
            </div>

            <div class="p-5">
                <div class="flex flex-wrap justify-between mb-2 place-items-center">
                    <span class="bg-clip-text text-transparent bg-gradient-to-r from-teal-400 to-lime-300">
						<h3 class="basis-[366px] font-bold tracking-tight  text-xl lg:text-2xl">{title}</h3>
					</span>
                    
                    
                    
                    <h3 class="basis-80 md:text-right text-sm lg:text-base">{date}</h3>  
                </div>
                <p class="mb-3 font-normal text-white text-base lg:text-lg">{description}</p>
                <br>
                <ul class="flex gap-x-4 flex-wrap">

                    {tags.map((tag) =>( 
                    <li>
                        <span class={`flex gap-x-2 rounded-full bg-slate-900 px-2 py-1 mb-4 text-xs items-center border border-green-600 transition duration-500  ${tag.class}`}>
                            <tag.icon class=" size-5 brightness-100 transition duration-500 "/>
                            {tag.name}
                        </span>
                    </li>
                ))}
                </ul>
                <br>
                <div class="text-center lg:text-left  md:text-left">
                    
                    <a href={link} target="_blank" type="button" class=" text-black bg-gradient-to-r from-lime-300 via-lime-500 to-lime-600 hover:bg-gradient-to-br shadow-lg shadow-lime-500/40 font-medium rounded-lg text-sm px-7 py-2.5">
                        Ir a ver...
                    </a>
                    
                </div>
            </div>
        </div>
        <br>
    ))
}


